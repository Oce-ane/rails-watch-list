<div class="container">
  <div class="card-header">
    <h1>Stop bookmarking movies and go watch them!</h1>
  </div>
  <% @lists.each do |list| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/?<%="#{list.name})"%>">
      <%= link_to list.name, list_path(list) %>
  </div>
  <% end %>
</div>
