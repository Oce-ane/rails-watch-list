<div class="container">
  <div class="card-header">
    <h1>Stop bookmarking movies and go watch them!</h1>
  </div>
  <div class="cards">
  <% @lists.each do |list| %>
    <% if list.picture.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= "#{cl_image_path list.picture.key}" %>)">
          <%= link_to list.name, list_path(list) %>
      </div>
    <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path("movie_list_izhpoi") %>)">
          <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  <% end %>
  </div>
  <br>
  <br>
</div>
